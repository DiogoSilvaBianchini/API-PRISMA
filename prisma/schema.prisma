generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id String @id @default(uuid())
  describe String
  createdAt DateTime @default(now())
  user User @relation(fields: [userId], references: [id])
  userId String
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  tasks Task[]
}